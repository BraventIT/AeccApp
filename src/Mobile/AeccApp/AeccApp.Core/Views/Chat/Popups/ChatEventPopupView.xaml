<?xml version="1.0" encoding="UTF-8" ?>
<vPop:BasePopupPage
    x:Class="AeccApp.Core.Views.Popups.ChatEventPopupView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:AeccApp.Core.Controls"
    xmlns:vPop="clr-namespace:AeccApp.Core.Views.Popups"
    BackgroundColor="{StaticResource SeeThrough}">

    <Frame Style="{StaticResource PopupFrameStyle}">
        <StackLayout>
            <ctrl:CustomImage
                HeightRequest="12"
                HorizontalOptions="Start"
                SourcePlatform="x_icon">
                <ctrl:CustomImage.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClosePopupCommand}" />
                </ctrl:CustomImage.GestureRecognizers>
            </ctrl:CustomImage>

            <ctrl:CustomImage
                Margin="0,18,0,0"
                HeightRequest="55"
                HorizontalOptions="Center"
                SourcePlatform="PopUp_Ico_thumbsdown" />

            <Label
                Margin="0,27,0,0"
                Style="{StaticResource TitleLabelStyleNormal}"
                Text="{Binding Event.MessageTitle}" />

            <Label
                Margin="8,20,8,30"
                HorizontalTextAlignment="Center"
                Style="{StaticResource SubTitleLabelStyleNormal}"
                Text="{Binding Event.Message}" />

        </StackLayout>
    </Frame>
</vPop:BasePopupPage>