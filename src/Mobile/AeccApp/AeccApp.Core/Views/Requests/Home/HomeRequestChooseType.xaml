<?xml version="1.0" encoding="utf-8" ?>
<v:BaseContentPage
    x:Class="AeccApp.Core.Views.HomeRequestChooseTypeView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:beh="clr-namespace:AeccApp.Core.Behaviors"
    xmlns:ctrl="clr-namespace:AeccApp.Core.Controls"
    xmlns:v="clr-namespace:AeccApp.Core.Views"
    xmlns:vm="clr-namespace:AeccApp.Core.ViewModels"
    Title="{Binding [CommonChooseRequestType]}"
    vm:ViewModelLocator.AutoWireViewModel="True">
    <ContentView.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="requestTypesTemplate">
                <ViewCell>
                    <Grid RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="30,26,0,0"
                            FontAttributes="Bold"
                            FontSize="{StaticResource MediumSize}"
                            Text="{Binding Name}"
                            TextColor="{StaticResource GreyTextDark}" />

                        <ctrl:CustomImage
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,26,20,0"
                            HeightRequest="17"
                            HorizontalOptions="End"
                            SourcePlatform="right_arrow"
                            VerticalOptions="Center"
                            WidthRequest="9" />
                        <BoxView
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="0,26,0,0"
                            HeightRequest="1"
                            Color="LightGray" />

                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    <StackLayout>
        <!--  Header  -->
        <StackLayout
            Padding="35"
            BackgroundColor="{StaticResource LightSilver}"
            HorizontalOptions="FillAndExpand">

            <Grid HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackLayout
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <ctrl:CustomImage
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        SourcePlatform="location_pin"
                        VerticalOptions="Center"
                        WidthRequest="25" />

                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Style="{StaticResource TitleLabelStyleNormal}"
                        Text="{Binding MyAddress.Name}"
                        VerticalOptions="Center" />
                </StackLayout>
                <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Text="{Binding MyAddress.DisplayAddress}"
                    VerticalOptions="Center" />
            </Grid>
        </StackLayout>

        <!--  Requests types list  -->
        <Grid>
            <ctrl:CustomActivityIndicatorControl HorizontalOptions="Center" VerticalOptions="Center" />

            <ListView
                HasUnevenRows="True"
                ItemTemplate="{StaticResource requestTypesTemplate}"
                ItemsSource="{Binding RequestTypes}">

                <ListView.Behaviors>
                    <beh:EventToCommandBehavior
                        Command="{Binding RequestTypeCommand}"
                        EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}"
                        EventName="ItemTapped" />
                </ListView.Behaviors>

                <!--  Footer  -->
                <ListView.Footer>
                    <StackLayout HorizontalOptions="Center">
                        <Label
                            FontSize="{StaticResource LargeSize}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding ProvinceHasNotRequestAvailable}"
                            Text="{Binding [HomeRequestChooseTypeNoRequestsInProvince]}" />

                        <Grid>
                            <Button
                                Margin="0"
                                BackgroundColor="{StaticResource AlmostWhiteColor}"
                                BorderRadius="0"
                                Command="{Binding RequestTalkToAeccCommand}" />

                            <Grid InputTransparent="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Column="0"
                                    Margin="30,26,0,26"
                                    FontAttributes="Bold"
                                    FontSize="{StaticResource MediumSize}"
                                    Text="{Binding [NewHomeRequestChoseTypeTalkToAnAECCProfesional]}"
                                    TextColor="{StaticResource GreyTextDark}" />
                                <ctrl:CustomImage
                                    Grid.Column="1"
                                    Margin="0,26,20,26"
                                    HeightRequest="17"
                                    HorizontalOptions="End"
                                    SourcePlatform="right_arrow"
                                    VerticalOptions="Center"
                                    WidthRequest="9" />
                                <BoxView
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    HeightRequest="1"
                                    Color="LightGray" />
                            </Grid>
                        </Grid>

                    </StackLayout>
                </ListView.Footer>

            </ListView>
        </Grid>

    </StackLayout>
</v:BaseContentPage>