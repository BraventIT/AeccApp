<?xml version="1.0" encoding="utf-8" ?>
<v:BaseContentPage
    x:Class="AeccApp.Core.Views.NewHospitalAddressView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:beh="clr-namespace:AeccApp.Core.Behaviors"
    xmlns:ctrl="clr-namespace:AeccApp.Core.Controls"
    xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
    xmlns:v="clr-namespace:AeccApp.Core.Views"
    xmlns:vm="clr-namespace:AeccApp.Core.ViewModels"
    Title="{Binding [CommonChoseHospital]}"
    vm:ViewModelLocator.AutoWireViewModel="True">
    <ContentView.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="hospitalListTemplate">
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="20,10,0,0"
                            FontAttributes="Bold"
                            FontSize="{StaticResource MediumSize}"
                            Text="{Binding Name}"
                            TextColor="{StaticResource GreyTextDark}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="20,0,0,5"
                            FontAttributes="Bold"
                            FontSize="{StaticResource MidMediumSize}"
                            Text="{Binding Province}"
                            TextColor="{StaticResource GreyTextDark}" />

                        <ctrl:CustomImage
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,10,20,0"
                            HeightRequest="17"
                            HorizontalOptions="End"
                            SourcePlatform="right_arrow"
                            WidthRequest="9" />

                        <BoxView
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HeightRequest="1"
                            Color="LightGray" />

                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid>
        <ActivityIndicator
            HeightRequest="50"
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="{StaticResource AccentColor}">
            <ActivityIndicator.WidthRequest>
                <OnPlatform
                    x:TypeArguments="x:Double"
                    Android="50"
                    WinPhone="400"
                    iOS="50" />
            </ActivityIndicator.WidthRequest>
        </ActivityIndicator>

        <StackLayout>
            <!--  Sub navigation bar with map and hospital list  -->
            <StackLayout
                Padding="20,5,20,5"
                BackgroundColor="{StaticResource TextGreenColor}"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand">
                <Grid HorizontalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackLayout
                        Margin="0,0,0,0"
                        HorizontalOptions="Center"
                        Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding HospitalMapTabCommand}" />
                        </StackLayout.GestureRecognizers>

                        <ctrl:CustomImage
                            HeightRequest="25"
                            SourcePlatform="map_icon"
                            VerticalOptions="Center"
                            WidthRequest="25" />
                        <Label
                            FontSize="{StaticResource MediumSize}"
                            Text="{Binding [CommonMap]}"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </StackLayout>
                    <BoxView
                        Grid.Row="1"
                        Grid.Column="0"
                        HeightRequest="2"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding SwitchBetweenAndHospitalList}"
                        VerticalOptions="End"
                        Color="Black" />

                    <BoxView
                        Grid.Column="1"
                        WidthRequest="70"
                        Color="Transparent" />

                    <StackLayout
                        Grid.Column="2"
                        Margin="0"
                        HorizontalOptions="Center"
                        Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding HospitalListTabCommand}" />
                        </StackLayout.GestureRecognizers>

                        <ctrl:CustomImage
                            HeightRequest="25"
                            SourcePlatform="list_icon"
                            VerticalOptions="Center"
                            WidthRequest="25" />
                        <Label
                            FontSize="{StaticResource MediumSize}"
                            Text="{Binding [CommonList]}"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </StackLayout>

                    <BoxView
                        Grid.Row="1"
                        Grid.Column="2"
                        HeightRequest="2"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding SwitchBetweenAndHospitalList, Converter={StaticResource InverseBoolConverter}}"
                        VerticalOptions="End"
                        Color="Black" />

                </Grid>
            </StackLayout>


            <StackLayout>
                <!--  Hospitals map  -->
                <Grid
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding SwitchBetweenAndHospitalList}"
                    VerticalOptions="FillAndExpand">
                    <ctrl:CustomMap
                        x:Name="map"
                        HasZoomEnabled="True"
                        HeightRequest="600"
                        MapPins="{Binding MapPins}">

                        <ctrl:CustomMap.Behaviors>
                            <beh:EventToCommandBehavior
                                Command="{Binding InfoWindowClickedCommand}"
                                EventArgsConverter="{StaticResource InfoWindowClickedEventArgsConverter}"
                                EventName="InfoWindowClicked" />
                        </ctrl:CustomMap.Behaviors>

                    </ctrl:CustomMap>

                </Grid>
                <!--  Hospitals list  -->

                <StackLayout IsVisible="{Binding SwitchBetweenAndHospitalList, Converter={StaticResource InverseBoolConverter}}">
                    <!--  Address search entry  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Frame
                            Grid.Row="0"
                            Margin="20,20,20,20"
                            Padding="1"
                            BackgroundColor="{StaticResource LightGraySubtitle}"
                            CornerRadius="25"
                            HasShadow="False"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Frame
                                Margin="0"
                                Padding="0"
                                BackgroundColor="White"
                                CornerRadius="25"
                                HasShadow="False"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Grid Padding="5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="35" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="35" />
                                    </Grid.ColumnDefinitions>

                                    <ctrl:CustomImage
                                        Grid.Column="0"
                                        Margin="5,10"
                                        HorizontalOptions="Center"
                                        SourcePlatform="search_mini_icon"
                                        VerticalOptions="Center" />

                                    <Entry
                                        Grid.Column="1"
                                        BackgroundColor="Transparent"
                                        Placeholder="{Binding [NewHomeAddressViewSearchAddress]}"
                                        Text="{Binding AddressFinder}"
                                        WidthRequest="300">
                                        <Entry.Behaviors>
                                            <beh:EventToCommandBehavior
                                                Command="{Binding AddressChangedCommand}"
                                                EventArgsConverter="{StaticResource TextChangeEventArgsConverter}"
                                                EventName="TextChanged" />
                                        </Entry.Behaviors>
                                    </Entry>


                                    <Frame
                                        Grid.Column="2"
                                        Margin="0"
                                        Padding="10"
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="Center"
                                        IsVisible="{Binding IsSearchIconVisible}">
                                        <ctrl:CustomImage SourcePlatform="x_icon" VerticalOptions="Center" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ResetAddressFinderCommand}" />
                                        </Frame.GestureRecognizers>
                                    </Frame>

                                </Grid>
                            </Frame>
                        </Frame>
                    </Grid>
                    <BoxView HeightRequest="1" Color="LightGray" />

                    <Grid
                        Margin="5"
                        HorizontalOptions="Center"
                        IsVisible="{Binding HospitalsListIsEmpty}"
                        VerticalOptions="FillAndExpand">
                        <Grid.HeightRequest>
                            <OnPlatform
                                x:TypeArguments="x:Double"
                                Android="70"
                                WinPhone="80"
                                iOS="70" />
                        </Grid.HeightRequest>

                        <Label
                            FontSize="{StaticResource MediumSize}"
                            HorizontalTextAlignment="Center"
                            Text="{Binding [NewHomeAddressViewNoHospitalsInList]}" />

                    </Grid>
                    <Grid>
                        <ListView
                            HasUnevenRows="True"
                            HeightRequest="600"
                            ItemTemplate="{StaticResource hospitalListTemplate}"
                            ItemsSource="{Binding Hospitals}">
                            <ListView.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="WinPhone, Windows" Value="100" />
                                </OnPlatform>
                            </ListView.Margin>

                            <ListView.Behaviors>
                                <beh:EventToCommandBehavior
                                    Command="{Binding NewHospitalSelectedCommand}"
                                    EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}"
                                    EventName="ItemTapped" />
                            </ListView.Behaviors>
                        </ListView>
                    </Grid>
                </StackLayout>
            </StackLayout>


        </StackLayout>
    </Grid>
</v:BaseContentPage>